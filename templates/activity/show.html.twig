{% extends 'base.html.twig' %}

{% block title %}Activity{% endblock %}

{% block body %}
    <h1>Activity</h1>
    <div class="row">
        <div class="col-12">
            <p align="right">
            <a href="{{ path('app_activity_index') }}"  class="btn btn-outline-success">back to list</a>
            </p>
        </div>    


    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>ActivityName</th>
                <td>{{ activity.ActivityName }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activity.description }}</td>
            </tr>
        </tbody>
    </table>

    

    <a href="{{ path('app_activity_edit', {'id': activity.id}) }}" class="btn btn-success">edit</a>

    {{ include('activity/_delete_form.html.twig') }}
{% endblock %}
