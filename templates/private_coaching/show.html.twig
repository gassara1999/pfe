{% extends 'base.html.twig' %}

{% block title %}PrivateCoaching{% endblock %}

{% block body %}
    <h1>Private Coaching</h1>
    <div class="col-12">
            <p align="right">
                <a href="{{ path('app_private_coaching_index') }}" class="btn btn-outline-success">back to list</a>
            </p>
        </div>


    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ private_coaching.id }}</td>
            </tr>
            <tr>
                <th>DateSession</th>
                <td>{{ private_coaching.DateSession ? private_coaching.DateSession|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>BeginHour</th>
                <td>{{ private_coaching.BeginHour }}</td>
            </tr>
            <tr>
                <th>EndHour</th>
                <td>{{ private_coaching.EndHour }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_private_coaching_edit', {'id': private_coaching.id}) }}" button type="button" class="btn btn-success" >edit</a>

    {{ include('private_coaching/_delete_form.html.twig') }}
{% endblock %}
