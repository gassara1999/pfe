{% extends 'base.html.twig' %}

{% block title %}Planning{% endblock %}

{% block body %}
	<div class="show-Container">
		<h1>Our Planning</h1>
		<div class="row">
			<div class="col-12">
				<p align="right">
					<a href="{{ path('app_planning_index') }}" class="btn btn-outline-success">back to list</a>
				</p>
			</div>

			<table class="table show-table">
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ planning.id }}</td>
					</tr>
					<tr>
						<th>Activity</th>
						<td>{{ planning.activity.ActivityName }}</td>
                    </tr>
					</tr>
					<tr>
						<th>Responsible coach</th>
						<td>{{ planning.User.UserName }}</td>
					</tr>
					<tr>
						<th>Room Number</th>
						<td>{{ planning.roomNumber }}</td>
					</tr>
					<tr>
						<th>Begin Hour</th>
						<td>{{ planning.BeginHour }}</td>
					</tr>
					<tr>
						<th>End Hour</th>
						<td>{{ planning.EndHour }}</td>
					</tr>
					<tr>
						<th>Planning date</th>
						<td>{{ planning.date ? planning.date|date('Y-m-d') : '' }}</td>
					</tr>
				</tbody>
			</table>


			<div>
				<a href="{{ path('app_planning_edit', {'id': planning.id}) }}" button type="button" class="btn btn-success edit-btn-show">edit</a>

				{{ include('planning/_delete_form.html.twig') }}</div>
		</div>


	{% endblock %}
