{% extends 'base.html.twig' %}

{% block title %}Planning index{% endblock %}

{% block body %}
    <h1>our Planning </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Activity</th>
                <th>RoomNumber</th>
                <th>BeginHour</th>
                <th>EndHour</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for planning in plannings %}
            <tr>
                <td>{{ planning.id }}</td>
                <td>{{ planning.activity }}</td>
                <td>{{ planning.roomNumber }}</td>
                <td>{{ planning.BeginHour }}</td>
                <td>{{ planning.EndHour }}</td>
                <td>{{ planning.date ? planning.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_planning_show', {'id': planning.id}) }}" button type="button" class="btn btn-primary">show</a>
                    <a href="{{ path('app_planning_edit', {'id': planning.id}) }}" button type="button" class="btn btn-success">edit</a>
                    <a href="{{ path('app_planning_delete', {'id': planning.id}) }}" button type="button" class="btn btn-danger">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_planning_new') }}" button type="button" class="btn btn-primary btn-lg">Create new</a>
{% endblock %}
